page {
  background-color: #F4F5F7;
}

.forum-container .head-container {
  width: 100%;
  overflow: hidden;
  background-color: #FFF;
}

.forum-container .head-container .left-box,
.forum-container .head-container .right-box {
  width: 50%;
  float: left;
}

.forum-container .head-container .left-box .item,
.forum-container .head-container .right-box .item {
  border-right: 1px solid #F4F5F7;
  margin-bottom: 40rpx;
}

.forum-container .head-container .left-box .item view .img-icon,
.forum-container .head-container .right-box .item view .img-icon {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 40rpx auto;
}

.forum-container .head-container .left-box .item view.desc-text,
.forum-container .head-container .right-box .item view.desc-text {
  text-align: center;
  font-size: 40rpx;
  color: #13227a;
}

.forum-container .item-list-container {
  margin-top: 20rpx;
  background-color: #FFF;
}

.forum-container .item-list-container:nth-child(1) {
  margin-top: 0;
}

.forum-container .item-list-container .item-choice {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #13227a;
}

.forum-container .item-list-container .item-choice .item-choice-title {
  display: inline-block;
  width: 85%;
  padding-left: 30rpx;
}

.forum-container .item-list-container .item-choice:after {
  content: '';
  display: block;
  width: 100%;
  height: 1px;
  background-color: #dbdee4;
  -webkit-transform: scaleY(0.5);
  -ms-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.forum-container .item-list-container .item-choice .img-icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: text-bottom;
  margin-right: 20rpx;
}

.forum-container .item-list-container .item-container {
  font-size: 28rpx;
  color: #666C88;
  line-height: 80rpx;
  padding: 0 30rpx;
}

.forum-container .item-list-container .item-container .item:after {
  content: '';
  display: block;
  width: 100%;
  height: 1px;
  background-color: #dbdee4;
  -webkit-transform: scaleY(0.5);
  -ms-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.forum-container .item-list-container .item-container .item:last-child:after {
  content: '';
  display: block;
  width: 100%;
  height: 0px;
  background-color: #dbdee4;
  -webkit-transform: scaleY(0.5);
  -ms-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.forum-container .item-list-container .item-container .item .img-icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: text-bottom;
  margin-right: 20rpx;
}

.text-arrows {
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  border-top: 1px solid #ABB2D0;
  border-right: 1px solid #ABB2D0;
  margin-left: 16rpx;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}
