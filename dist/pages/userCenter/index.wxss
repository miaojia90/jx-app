page {
  background-color: #F4F5F7;
}

.my-treasure-container .header-view {
  background: url("https://wx.jinfuzi.com/images/treasure/head-bg.png") center top;
  background-size: 100% auto;
  margin-bottom: 20rpx;
}

.my-treasure-container .header-view .user-view {
  padding: 30rpx 30rpx;
  overflow: hidden;
  font-size: 40rpx;
  color: #0A1437;
}

.my-treasure-container .header-view .user-view image {
  float: left;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #F4F5F7;
  border-radius: 50%;
}

.my-treasure-container .header-view .user-view .userInfo-box {
  float: left;
  padding-left: 30rpx;
}

.my-treasure-container .header-view .user-view .userInfo-box .userName {
  padding-top: 10rpx;
  font-weight: 600;
}

.my-treasure-container .header-view .user-view .userInfo-box .userPhone {
  padding-top: 20rpx;
}

.my-treasure-container .header-view .user-asset-view {
  overflow: hidden;
  padding-bottom: 60rpx;
}

.my-treasure-container .header-view .user-asset-view .asset-box {
  float: left;
  width: 33.3%;
}

.my-treasure-container .header-view .user-asset-view .asset-box text {
  display: block;
  text-align: center;
}

.my-treasure-container .header-view .user-asset-view .asset-box text.money-text {
  font-size: 44rpx;
  color: #555A73;
  height: 48rpx;
  line-height: 48rpx;
}

.my-treasure-container .header-view .user-asset-view .asset-box text.desc-text {
  font-size: 28rpx;
  color: #82879B;
  height: 32rpx;
  line-height: 32rpx;
}

.my-treasure-container .item-choice {
  background-color: #FFF;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #666C88;
  padding-left: 40rpx;
  border-bottom: 1px solid #F4F5F7;
}

.my-treasure-container .item-choice icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: text-bottom;
  margin-right: 20rpx;
}

.my-treasure-container .item-choice .item-choice-content {
  float: right;
  padding-right: 30rpx;
}

.my-treasure-container .item-choice .icon-appraisal {
  background: url("https://wx.jinfuzi.com/images/treasure/icon-appraisal.png") center top;
  background-size: 100% auto;
}

.my-treasure-container .item-choice .icon-approve {
  background: url("https://wx.jinfuzi.com/images/treasure/icon-approve.png") center top;
  background-size: 100% auto;
}

.my-treasure-container .item-choice .icon-card {
  background: url("https://wx.jinfuzi.com/images/businessCard/business_card.png") center top;
  background-size: 100% auto;
}

.my-treasure-container .item-choice .icon-feedback {
  background: url("https://wx.jinfuzi.com/images/treasure/icon-feedback.png") center top;
  background-size: 100% auto;
}

.my-treasure-container .item-choice .icon-positions {
  background: url("https://wx.jinfuzi.com/images/treasure/icon-positions.png") center top;
  background-size: 100% auto;
}

.my-treasure-container .item-choice .icon-about {
  background: url("https://wx.jinfuzi.com/images/treasure/icon-about.png") center top;
  background-size: 100% auto;
}

.my-treasure-container .item-btn {
  margin-top: 60rpx;
  color: #D2B978;
  background-color: #FFF;
  border: none;
  border-radius: 0;
}

.my-treasure-container .item-btn:after {
  border: none;
}

.text-arrows {
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  border-top: 1px solid #ABB2D0;
  border-right: 1px solid #ABB2D0;
  margin-left: 16rpx;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}

.text-arrows-nor {
  width: 16rpx;
  height: 16rpx;
  display: block;
  margin-top: 40rpx;
  border-top: 1px solid #ABB2D0;
  border-right: 1px solid #ABB2D0;
  margin-left: 16rpx;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}

.pop-up-box-view {
  width: 512rpx;
  height: 640rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -400rpx;
  margin-left: -300rpx;
  background-color: #FFF;
  border-radius: 20rpx;
  z-index: 199;
  padding: 80rpx 44rpx;
}

.pop-up-box-view .desc-text {
  color: #232D4B;
  font-size: 32rpx;
  text-align: center;
}

.pop-up-box-view .real-name-btn {
  color: #FFF;
  font-size: 34rpx;
  text-align: center;
  background-color: #D2B978;
  height: 88rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
}

.pop-up-box-view .step-box {
  border: 1px solid #DBDEE4;
  height: 120rpx;
  line-height: 120rpx;
  margin-top: 80rpx;
  color: #82879B;
  font-size: 32rpx;
  position: relative;
}

.pop-up-box-view .step-mark {
  width: 120rpx;
  height: 42rpx;
  display: block;
  position: absolute;
  top: -20rpx;
  left: 50%;
  margin-left: -60rpx;
  background-color: #D5D8DF;
  border-radius: 21rpx;
  text-align: center;
  font-size: 30rpx;
}

.pop-up-box-view .step-mark-text {
  width: 120rpx;
  height: 42rpx;
  display: block;
  position: absolute;
  top: -62rpx;
  left: 50%;
  color: #FFF;
  margin-left: -60rpx;
  border-radius: 21rpx;
  text-align: center;
  font-size: 30rpx;
}

.pop-up-box-view icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: text-bottom;
  margin-right: 20rpx;
  margin-left: 170rpx;
}

.pop-up-box-view .item-choice-content {
  float: right;
  padding-right: 30rpx;
}

.pop-up-box-view .icon-appraisal {
  background: url("https://wx.jinfuzi.com/images/treasure/icon-appraisal.png") center top;
  background-size: 100% auto;
}

.pop-up-box-view .icon-approve {
  background: url("https://wx.jinfuzi.com/images/treasure/icon-approve.png") center top;
  background-size: 100% auto;
}

.pop-up-box-view .icon-delete {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  right: 0;
  top: 10rpx;
  background: url("https://wx.jinfuzi.com/images/treasure/icon-delete-normal.png") center top;
  background-size: 100% auto;
}
